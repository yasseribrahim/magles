<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/dimens_3dp"
    android:layout_marginTop="@dimen/dimens_3dp"
    card_view:cardCornerRadius="@dimen/dimens_3dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_6dp">

        <ImageView
            android:id="@+id/indicator"
            android:layout_width="@dimen/dimens_3dp"
            android:layout_height="match_parent"
            android:layout_above="@+id/separator"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens_3dp"
            android:layout_toEndOf="@+id/indicator"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/created_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/note"
            android:layout_margin="@dimen/dimens_4dp"
            android:layout_toEndOf="@+id/indicator"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/note"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/dimens_3dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/note"
            android:layout_margin="@dimen/dimens_3dp"
            android:paddingEnd="@dimen/dimens_3dp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="@dimen/small_text_size" />

        <ImageView
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/created_by"
            android:src="@color/gray_dark" />
    </RelativeLayout>
</android.support.v7.widget.CardView>