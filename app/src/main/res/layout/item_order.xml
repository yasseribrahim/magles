<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimens_3dp">
    <ImageView
        android:id="@+id/indicator"
        android:layout_width="@dimen/dimens_3dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@+id/separator"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/icon"
        android:layout_toStartOf="@+id/date"
        android:layout_marginStart="@dimen/dimens_3dp"
        android:paddingStart="@dimen/dimens_3dp"
        android:singleLine="true"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/icon"
        android:layout_below="@+id/title"
        android:layout_marginStart="@dimen/dimens_3dp"
        android:paddingStart="@dimen/dimens_3dp"
        android:singleLine="true"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/created_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/date"
        android:layout_marginStart="@dimen/dimens_3dp"
        android:paddingStart="@dimen/dimens_3dp"
        android:singleLine="true"
        android:textAppearance="?attr/textAppearanceListItem" />

    <ImageView
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/gray_dark"
        android:layout_below="@+id/content"
        android:layout_alignBottom="@+id/status"/>
</RelativeLayout>
